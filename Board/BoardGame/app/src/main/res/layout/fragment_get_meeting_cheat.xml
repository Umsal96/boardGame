<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".getMeetingCheat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/chattingRoomBack"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/moreImg"
                android:layout_width="42dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/add_24px" />

            <EditText
                android:id="@+id/chatText"
                android:layout_width="301dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout_normal"
                android:backgroundTint="@color/lightGray"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName"
                android:minHeight="40dp" />

            <Button
                android:id="@+id/sendChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/skyBlue"
                android:text="전송" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imgLayout"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:background="@color/white"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/cameraImg"
                android:layout_width="150dp"
                android:layout_height="145dp"
                android:layout_marginStart="45dp"
                android:src="@drawable/photo_camera_24px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/galleryImg"
                android:layout_width="150dp"
                android:layout_height="145dp"
                android:layout_marginEnd="45dp"
                android:src="@drawable/image_24px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>