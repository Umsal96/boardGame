<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileModify">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginStart="165dp"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        android:src="@drawable/img2"
        app:civ_border_color="#000000"
        app:civ_border_overlay="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="93dp"
        android:layout_height="31dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="8dp"
        android:text="현재 닉네임"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/nowNick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nowNick"
        android:layout_width="190dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="78dp"
        android:text="TextView"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputNewNick"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/border_layout_normal"
        android:ems="10"
        android:hint="닉네임을 입력해주세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/checkNick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/checkNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="35dp"
        android:text="중복 확인"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@+id/noticeNick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nowNick" />

    <TextView
        android:id="@+id/noticeNick"
        android:layout_width="291dp"
        android:layout_height="36dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="194dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/toLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/chooseImg"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:layout_marginBottom="52dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/photo_camera_24px"
        app:layout_constraintBottom_toTopOf="@+id/nowNick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/toLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="254dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="27dp"
        android:text="확인"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>