<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".findIdAuth">

    <EditText
        android:id="@+id/findPhone"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="93dp"
        android:background="@drawable/border_layout_normal"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/findAuth"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/border_layout_normal"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noticePhone" />

    <Button
        android:id="@+id/sendAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="27dp"
        android:text="인증 요청"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/checkAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="24dp"
        android:enabled="false"
        android:text="번호 확인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendAuth" />

    <TextView
        android:id="@+id/noticePhone"
        android:layout_width="215dp"
        android:layout_height="32dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="19dp"
        android:text="전화번호를 입력해주세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findPhone" />

    <TextView
        android:id="@+id/noticeAuth"
        android:layout_width="217dp"
        android:layout_height="36dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="28dp"
        android:text="올바른 인증번호를 입력해주세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findAuth" />

    <Button
        android:id="@+id/toFindId"
        android:layout_width="306dp"
        android:layout_height="51dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="76dp"
        android:text="아이디 확인"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="34dp"
        android:text="아이디 찾기"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>